<%- include("../../includes/head.ejs") %>
    <h1 class="text-3xl">Cart</h1>
    <div class="py-5 flex gap-5">
        <div class="flex flex-1 flex-col gap-5 overflow-y-auto cart-items h-[600px] snap-y">
            <% for (const product of cartProducts) { %>
                <div class="border-[1px] border-[#2BAE66] flex p-2 justify-between snap-start">
                    <div class="flex gap-5">
                        <img src="<%= product.image %>" alt="product" class="h-[180px]"/>
                        <div class="flex flex-col">
                            <div>
                                <h3 class="text-xl font-bold"><%= product.name %></h3>
                                <span class="text-gray-400">$<%= product.price %> *<%= product.count %></span>
                            </div>
                            <span class="text-[#2BAE66] font-bold">$<%= product.price * product.count %></span>
                        </div>
                    </div>
                    <div class="flex flex-col gap-1">
                        <button class="flex-1 py-2 px-10 border-[1px] bg-[#2BAE66] hover:bg-[#FCF6F5] hover:border-[#2BAE66] text-[#FCF6F5] hover:text-[#2BAE66] ">Add</button>
                        <button class="flex-1 py-2 border-[1px] bg-[#990011] hover:bg-[#FCF6F5] hover:border-[#990011] text-[#FCF6F5] hover:text-[#990011]">Delete</button>
                    </div>
                </div>
            <% } %>
        </div>
        <div class="flex-1">
            <h2 class="text-2xl">Total Price: $<%= totalPrice %></h2>
        </div>
    </div>
    <script>
        document.body.classList.add("overflow-hidden");
    </script>
<%- include("../../includes/end.ejs") %>