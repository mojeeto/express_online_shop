<%- include("../../includes/head.ejs") %>
<h3 class="text-3xl">Login Page</h3>
<form
  method="post"
  action="/auth/login"
  class="flex flex-col w-[500px] mx-auto"
>
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <div class="py-5 flex flex-col gap-5">
    <div class="flex flex-col">
      <label for="email">Email:</label>
      <input class="border-[1px] p-1" id="email" name="email" type="email" />
    </div>
    <div class="flex flex-col">
      <label for="password">Password:</label>
      <input
        class="border-[1px] p-1"
        id="password"
        name="password"
        type="password"
      />
    </div>
  </div>
  <button
    class="flex-1 py-2 px-10 border-[1px] hover:bg-[#2BAE66] bg-[#FCF6F5] border-[#2BAE66] hover:text-[#FCF6F5] text-[#2BAE66]"
    type="submit"
  >
    Login
  </button>
  <a href="/auth/reset" class="text-blue-500 hover:underline"
    >Reset Password!</a
  >
</form>
<%- include("../../includes/end.ejs")%>
