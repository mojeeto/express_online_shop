<%- include("../../includes/head.ejs") %>
<h3 class="text-3xl">Sign-up Page</h3>
<form
  method="post"
  action="/auth/signup"
  class="flex flex-col w-[500px] mx-auto"
>
  <div class="py-5 flex flex-col gap-5">
    <div class="flex flex-col">
      <label for="email">Email:</label>
      <input class="border-[1px] p-1" id="email" name="email" type="email" />
    </div>
    <div class="flex flex-col">
      <label for="password">Password:</label>
      <input
        class="border-[1px] p-1"
        id="password"
        name="password"
        type="password"
      />
    </div>
    <div class="flex flex-col">
      <label for="confirmpassword">Confirm Password:</label>
      <input
        class="border-[1px] p-1"
        id="confirmpassword"
        name="confirmpassword"
        type="password"
      />
    </div>
  </div>
  <button
    class="flex-1 py-2 px-10 border-[1px] hover:bg-[#2BAE66] bg-[#FCF6F5] border-[#2BAE66] hover:text-[#FCF6F5] text-[#2BAE66]"
    type="submit"
  >
    Sign up
  </button>
</form>
<%- include("../../includes/end.ejs")%>
